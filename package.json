{
  "name": "skset",
  "version": "0.2.1",
  "description": "LLM Skill Manager CLI for managing agent skills across multiple AI coding tools",
  "type": "module",
  "bin": {
    "skset": "./dist/skset"
  },
  "scripts": {
    "dev": "bun run src/index.ts",
    "build": "bun build ./src/index.ts --compile --outfile dist/skset",
    "test": "bun test",
    "lint": "biome lint ./src",
    "format": "biome format --write ./src",
    "check": "biome check --write ./src"
  },
  "keywords": [
    "cli",
    "llm",
    "agent-skills",
    "claude-code",
    "ai-tools"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@clack/prompts": "^0.8.2",
    "commander": "^14.0.2",
    "gray-matter": "^4.0.3",
    "picocolors": "^1.1.1",
    "yaml": "^2.6.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@types/bun": "latest"
  }
}
